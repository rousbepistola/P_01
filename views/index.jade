doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title NODEJS_Project1
    // BOOTSTRAP
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js', integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    // fonts
    link(href='https://fonts.googleapis.com/css?family=Maven+Pro|Montserrat|Raleway&display=swap', rel='stylesheet')
    //fontawesome
    script(src='https://kit.fontawesome.com/3d3ae9b37d.js', crossorigin='anonymous')

    // css
    style.
      * { font-family: 'Montserrat', sans-serif;
      font-family: 'Raleway', sans-serif;
      font-family: 'Maven Pro', sans-serif;
      }
      .bg{
      background:linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url("https://images.pexels.com/photos/1604202/pexels-photo-1604202.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
      background-repeat: no-repeat;
      width:100%;
      height: 100vh;
      }
      .form-container{
      color:whitesmoke;
      border: 1px solid lightslategray;
      padding: 50px 60px;
      margin-top: 20vh;
      -webkit-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      -moz-box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
      }
      .form-container a{
      color: rgb(40, 221, 212);
      text-decoration-line: underline;
      padding: 1rem;
      }
      #footer{
        height:35vh; 
        bottom:0; 
        background: rgb(7,7,8);
      }
      .footerLogo{
        border-right: 2px solid whitesmoke
      }
      
      @media only screen and (max-width: 768px) {
        #footer{
          height:100vh;
        }
        #secondFooterColumn{
          margin-top: 3rem;
        }
        .footerLogo{
          border-right:none;
        }
        .hrLine {
          border: solid 1px whitesmoke;
          margin-bottom:1rem
        }
        #siteMap {
          padding-top:3rem
        }
      }
  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='#') Localetti
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.active
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='signup') Signup
          li.nav-item
            a.nav-link(href='contactus') Contact Us
          li.nav-item
            a.nav-link(href='profile') Profile
    // navigation end
    .container-fluid.bg
      //bootstrap alert
      .alert.alert-warning.alert-dismissible.fade.show.col-md-6.mx-auto#emailNotification(role='alert')
        strong#emailAlert #{mailer}
        button.close(type='button', data-dismiss='alert', aria-label='Close')
          span(aria-hidden='true') ×

      .row
        .col-xs-12.col-md-4.col-sm-2
        .col-xs-12.col-md-4.col-sm-8
          // form start
          
          form.form-container(action='login', role='form', method="post")
            p.text-justify(style='color:salmon;') #{loginError}
            h3.text-center Login to your neighborhood
            .form-group.text-secondary
              label(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', name='email')
            .form-group.text-secondary
              label(for='exampleInputPassword1') Password
              input#exampleInputPassword1.form-control(type='password', name='pass')
              p.col-xs-12.col-md-12.col-sm-12
                a(href='./forgotpass' style='color:salmon; text-decoration:none') Forgot Password?
            button.btn.btn-success.btn-block(type='submit') Submit
            p.col-xs-12.col-md-12.col-sm-12
              a(href='./signup' style="text-decoration:none") Register now
            
              
              
          // form end
        .col-xs-12.col-md-4.col-sm-2

        //FOOTER
    .container-fluid#footer(style='')
      p(style='position:absolute;margin-top:-1rem; text-align:center;width:98%;color:salmon')
        i.fas.fa-angle-double-down.fa-2x
      .row.py-5(style='height:30%; text-align:center')
        .col-xs-12.col-sm-12.col-md-4.col-lg-4.col-xl-4.footerLogo
          img(src="/images/Localetti.png", alt="Localetti logo", style='width:10rem')
          h2(style='color:whitesmoke') Localetti
        .col-xs-12.col-sm-12.col-md-4.col-lg-4.col-xl-4#secondFooterColumn.footerLogo
          .row(style='height:50%')
            .col
              a(type="button", data-toggle="modal", data-target="#exampleModal")
                i.fas.fa-envelope.fa-3x.text-warning
              h6.mt-2(style='color:whitesmoke') Contact Us
            .col
              img(src="/images/v3.png", alt="Value Three Website Logo", style='width:3rem; border-radius:50%')
              h6.mt-2(style='color:whitesmoke') 
                a(href="https://valuethree.azurewebsites.net/" style='text-decoration:none; color:whitesmoke') Value Three
          .row.mt-4(style='height:50%;')
              .col
                i.fas.fa-user-astronaut.fa-3x
                h6.mt-2(style='color:whitesmoke') About Us
              .col
                i.fab.fa-node.fa-3x
                h6.mt-2(style='color:whitesmoke') PlaceHolder
          hr.hrLine
        
        .col-xs-12.col-sm-12.col-md-4.col-lg-4.col-xl-4.mt-3#siteMap(style='color:gray')
          .row
            .col
              i.fas.fa-map-signs.fa-2x Site Map
          .row.mt-5
            .col 
              h6 Home
            .col 
              h6 Signup
            .col 
              h6 Profile
          .row.mt-5
            .col
              h6.text-center.text-muted ©2020 RR Digital

      // Modal
      #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Localetti team would love to hear from you!
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
            .modal-body
              section
                div
                  .row
                    .col-sm-12
                      .row
                        .col-sm-12
                          div
                            h5 CONTACT US
                          form(method='post', data-form-title='CONTACT US', action='/mailer')
                            input(type='hidden', data-form-email='true')
                            .form-group
                              input.form-control(type='text', name='name', required='', placeholder='Name*', data-form-field='Name')
                            .form-group
                              input.form-control(type='email', name='contactEmail', required='', placeholder='Email*', data-form-field='Email')
                            .form-group
                              input.form-control(type='tel', name='phone', placeholder='Phone', data-form-field='Phone')
                            .form-group
                              textarea.form-control(name='message', placeholder='Message', rows='7', data-form-field='Message')
                            .form-group
                              button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                              button.btn.btn-primary.ml-2(type='submit') Send

    script.
      let emailAlert = document.getElementById('emailAlert')
      let emailNotification = document.getElementById('emailNotification');
      if(emailAlert.innerHTML == "Thank you for contacting us! We will respond as soon as we can"){
      emailNotification.style.visibility = "visible";
      } else {
      emailNotification.style.visibility = "hidden";
      }
